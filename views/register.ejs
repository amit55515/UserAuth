<%- include ('./partials/header') %>
<div class="container-fluid">
    <header class="jumbotron">
        <h1> User Registeration !</h1>
    </header>
    <div class="container-fluid">
        <form class="ui form" action="/register" method="POST">
            <div class="form-group">
                <label for="username"></label>
                <input type="text" name="username" placeholder="username"><br>
            </div>
            <div class="form-group">
                <label for="email"></label>
                <input type="email" name="email" placeholder="enter unique email only"><br>
            </div>
            <div class="form-group">
                <label for="password"></label>
                <input type="password" name="password" placeholder="password"><br>
            </div>
            <div class="form-group">
                <label for="hobby"></label>
                <input type="text" name="hobby" placeholder="hobby"><br>
            </div>
            <div class="form-group">
                <label for="dob"></label>
                <input type="date" name="dob" placeholder="date of birth"><br>
            </div>
            <div class="form-group">
                <label for="location"></label>
                <input type="text" name="location" placeholder="location"><br>
            </div>
            <button class="ui primary button">Register</button>
        </form>
    </div>
</div>

<%- include ('./partials/footer') %>